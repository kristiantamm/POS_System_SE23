<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.102">
<center>
    <VBox spacing="10" alignment="CENTER">
        <Label text="Team Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <HBox>
            <Label text="Team Name: "/>
            <Label fx:id="teamNameLabel"/>
        </HBox>
        <HBox>
            <Label text="Team Contact Person: "/>
            <Label fx:id="contactPersonLabel"/>
        </HBox>
        <HBox>
            <Label text="Team Members: "/>
            <Label fx:id="teamMembersLabel"/>
        </HBox>
        <ImageView fx:id="teamLogoImageView"/>

    </VBox>
</center>
</BorderPane>